# devcontainers.json
{
  "name": "Vault Run",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "extensions": ["hashicorp.hcl"],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "remoteUser": "vaultuser",
  "postCreateCommand": "/usr/local/bin/start-vault.sh & sleep 5",
  "forwardPorts": [8200]
}